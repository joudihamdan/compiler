import React, { useState,useRef, useEffect } from "react";

const productsData = [
  {
    id: 1,
    name: "Product 100",
    image:
      "https://images.pexels.com/photos/9978800/pexels-photo-9978800.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    description: "This is the description of Product 1."
  }

]

const productList = ({ products, onProductClick }) => (
  <div style={{ float: "left", width: "30%" }}>
    <h2>Product List</h2>
    <ul>
      {products.map((product) => (
        <li key={product.id} onClick={() => onProductClick(product)}>
          {product.name}
        </li>
      ))}
    </ul>
  </div>
);

const ProductDetails = ({ selectedProduct }) => (
  <div style={{ float: "right", width: "70%" }}>
    {selectedProduct && (
      <div>
        <h3>{selectedProduct.name}</h3>
         <h3>{selectedProduct.id}</h3>
        <h3>{selectedProduct.description}</h3>
        <h3>{selectedProduct.name}</h3>
        <img src={selectedProduct.image} alt={selectedProduct.name} />
        <p>{selectedProduct.description}</p>
      </div>
    )}
  </div>
);

const App = () => {
  const [selectedProduct, setSelectedProduct] = useState(null);

  const handleProductClick = (productaaaat) => {
    setSelectedProduct(productaaaat);
  };

  return (
    <div>
      <ProductList
        products={productsData}
        onProductClick={handleProductClick}
      />
      <ProductDetails selectedProduct={selectedProduct} />
    </div>
  );
};

export default App;
